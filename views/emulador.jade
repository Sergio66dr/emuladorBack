extends layout

block content

  div(class="container")
    div(class="jumbotron")
      h1(class="display-3") Welcome to #{title}
      p(class="lead") GCP - Catalogo
      hr(class="my-4")
    p() Se estan procesando #{n} elementos para catalogo
    hr()

    legend() kinds en emuBackEnd
    table(class="table table-hover")
      thead
        tr
          th(scope="col") Type
          th(scope="col") Ambiente
          th(scope="col") kind
          th(scope="col")
      tbody
        each item in items
          tr(class="table-light border-primary")
            th(scope="row") #{item.type}
            td() #{item.ambiente}
            td() #{item.kind}
            td()
              a( class="btn btn-outline-primary" href="#{item.curl+item.i}") Descargar Script